{
  "name": "alynt-certificate-generator",
  "version": "0.1.0",
  "private": true,
  "description": "Alynt Certificate Generator plugin assets",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.mjs",
    "dev": "node scripts/build.mjs --watch",
    "deploy": "bash deploy.sh",
    "deploy:watch": "nodemon --watch . --ext php,js,css,html --ignore node_modules/ --ignore .git/ --ignore scripts/ --delay 2 --exec \"bash deploy.sh\"",
    "dev:all": "concurrently --names \"build,deploy\" --prefix-colors \"cyan,magenta\" \"npm run dev\" \"npm run deploy:watch\"",
    "lint": "./vendor/bin/phpcs --standard=WordPress .",
    "lint:fix": "./vendor/bin/phpcbf --standard=WordPress ."
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "nodemon": "^3.1.0"
  }
}
